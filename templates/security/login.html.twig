{% extends 'layout/form_layout.html.twig' %}

{% block body %}
<div class="container py-4 my-5">
    <div class="row ">
        <div class="col-md-10 ">
            <div class="registration-form bg-dark p-4">
                <form method="post" action="{{ path('app_login') }}" class="needs-validation" novalidate>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-5">
                                <label for="username" class="text-white">Email:</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}"
                                       class="form-control bg-transparent rounded-0 border-bottom shadow-none pb-15 px-0 text-white" required>
                                <p class="invalid-feedback text-white">L'email est requis!</p>
                            </div>

                            <div class="form-group mb-5">
                                <label for="password" class="text-white">Mot de passe:</label>
                                <input type="password" id="password" name="_password"
                                       class="form-control bg-transparent rounded-0 border-bottom shadow-none pb-15 px-0 text-white" required>
                                <p class="invalid-feedback text-white">Le mot de passe est requis!</p>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    Connexion
                                    <img src="{{ asset('images/arrow-right.png') }}" alt="">
                                </button>
                            </div>

                            <div class="mt-4">
                                <a href="{{ path('app_register') }}" class="text-white">Pas encore inscrit ?</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}